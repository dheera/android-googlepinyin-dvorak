<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.inputmethod.libs.framework.firstrun.ActivationView android:id="@id/page_activation" style="@style/TutorialPage"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout style="@style/TutorialHeader">
        <include layout="@layout/first_run_page_header" />
    </LinearLayout>
    <LinearLayout style="@style/TutorialContent.Landscape">
        <LinearLayout style="@style/TutorialLandscapeSubContent.Left">
            <TextView android:text="@string/tutorial_activation_title" style="@style/TutorialTitle" />
        </LinearLayout>
        <LinearLayout style="@style/TutorialLandscapeSubContent.Right">
            <LinearLayout style="@style/TutorialStepLabel">
                <TextView android:id="@id/tutorial_enable_item_num_label" android:text="@string/tutorial_item_num_one" style="@style/TutorialItemNum" />
                <TextView android:text="@string/tutorial_enable" style="@style/TutorialActivationStep" />
            </LinearLayout>
            <com.google.android.apps.inputmethod.libs.framework.core.DoubleTextButton android:id="@id/tutorial_enable_button" style="@style/TutorialButton.WeightedHeight" textEnabled="@string/tutorial_enable_hint" textDisabled="@string/tutorial_enable_done" />
            <LinearLayout style="@style/TutorialStepLabel">
                <TextView android:id="@id/tutorial_select_item_num_label" android:text="@string/tutorial_item_num_two" style="@style/TutorialItemNum" />
                <TextView android:text="@string/tutorial_select" style="@style/TutorialActivationStep" />
            </LinearLayout>
            <com.google.android.apps.inputmethod.libs.framework.core.DoubleTextButton android:id="@id/tutorial_select_button" style="@style/TutorialButton.WeightedHeight" textEnabled="@string/tutorial_select_hint" textDisabled="@string/tutorial_select_done" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.apps.inputmethod.libs.framework.firstrun.ActivationView>