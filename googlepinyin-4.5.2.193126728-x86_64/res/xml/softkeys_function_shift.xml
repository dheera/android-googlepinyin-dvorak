<?xml version="1.0" encoding="utf-8"?>
<framework>
    <softkeys>
        <softkey id="@id/softkey_shift" layout="@layout/softkey_icon_center_icon_bottom" multi_touch="true" content_description="@string/shift_key_content_desc">
            <action type="DOWN" keycode="SHIFT_DOWN" />
            <action type="UP" keycode="SHIFT_UP" />
            <action type="PRESS" keycode="SHIFT_LEFT" action_on_down="true" />
            <action type="LONG_PRESS" keycode="LOCK_SHIFT" action_on_down="true" />
            <action type="DOUBLE_TAP" keycode="LOCK_SHIFT" action_on_down="true" />
            <icon location="@id/icon" value="@attr/IconShiftOff" />
            <icon location="@id/icon_bottom" value="@attr/IconBarUnlock" />
        </softkey>
        <softkey id="@id/softkey_shift_no_lock" layout="@layout/softkey_icon" multi_touch="true" content_description="@string/shift_key_content_desc">
            <action type="DOWN" keycode="SHIFT_DOWN" />
            <action type="UP" keycode="SHIFT_UP" />
            <action type="PRESS" keycode="SHIFT_LEFT" action_on_down="true" />
            <icon location="@id/icon" value="@attr/IconShiftOff" />
        </softkey>
        <softkey id="@id/softkey_shift_flip" layout="@layout/softkey_icon" multi_touch="true" content_description="@string/shift_flip_content_desc" alpha="@attr/IconAlpha">
            <action type="PRESS" keycode="LOCK_SHIFT" action_on_down="true" />
            <icon location="@id/icon" value="@attr/IconSymbolKeyboardPage1Flip" />
        </softkey>
        <softkey id="@id/softkey_shift_locked_flip" layout="@layout/softkey_icon" multi_touch="true" content_description="@string/shift_locked_flip_content_desc" alpha="@attr/IconAlpha">
            <action type="PRESS" keycode="UNLOCK_SHIFT" action_on_down="true" />
            <icon location="@id/icon" value="@attr/IconSymbolKeyboardPage2Flip" />
        </softkey>
        <softkey id="@id/softkey_symbols_flip" layout="@layout/softkey_icon" multi_touch="true" content_description="@string/shift_flip_content_desc" alpha="@attr/IconAlpha">
            <action type="PRESS" keycode="SWITCH_SUB_CATEGORY" action_on_down="true" data="SUB_CATEGORY_1" />
            <icon location="@id/icon" value="@attr/IconSymbolKeyboardPage1Flip" />
        </softkey>
        <softkey id="@id/softkey_more_symbols_flip" layout="@layout/softkey_icon" multi_touch="true" content_description="@string/shift_locked_flip_content_desc" alpha="@attr/IconAlpha">
            <action type="PRESS" keycode="SWITCH_SUB_CATEGORY" action_on_down="true" data="NORMAL" />
            <icon location="@id/icon" value="@attr/IconSymbolKeyboardPage2Flip" />
        </softkey>
        <softkey id="@id/softkey_shift_disabled" layout="@layout/softkey_icon" multi_touch="true">
            <icon location="@id/icon" value="@drawable/ic_key_shift_disabled" />
        </softkey>
        <softkey id="@id/softkey_shift_shifted" layout="@layout/softkey_icon_center_active_icon_bottom" multi_touch="true" long_press_delay="1200" content_description="@string/shift_key_content_desc">
            <action type="DOWN" keycode="SHIFT_DOWN" />
            <action type="UP" keycode="SHIFT_UP" />
            <action type="PRESS" keycode="SHIFT_LEFT" />
            <action type="LONG_PRESS" keycode="LOCK_SHIFT" action_on_down="true" />
            <action type="DOUBLE_TAP" keycode="LOCK_SHIFT" action_on_down="true" />
            <icon location="@id/icon" value="@attr/IconShiftOn" />
            <icon location="@id/icon_bottom" value="@attr/IconBarUnlock" />
        </softkey>
        <softkey id="@id/softkey_shift_shifted_combo" layout="@layout/softkey_icon_center_active_icon_bottom" multi_touch="true" content_description="@string/shift_key_content_desc">
            <action type="DOWN" keycode="SHIFT_DOWN" />
            <action type="UP" keycode="SHIFT_UP" />
            <action type="PRESS" keycode="SHIFT_LEFT" />
            <icon location="@id/icon" value="@attr/IconShiftOn" />
            <icon location="@id/icon_bottom" value="@attr/IconBarUnlock" />
        </softkey>
        <softkey id="@id/softkey_shift_shifted_no_lock" layout="@layout/softkey_icon_active" multi_touch="true" content_description="@string/shift_key_content_desc">
            <action type="DOWN" keycode="SHIFT_DOWN" />
            <action type="UP" keycode="SHIFT_UP" />
            <action type="PRESS" keycode="SHIFT_LEFT" />
            <icon location="@id/icon" value="@attr/IconShiftOn" />
        </softkey>
        <softkey id="@id/softkey_shift_locked" layout="@layout/softkey_icon_center_active_icon_bottom_active" multi_touch="true" long_press_delay="1200" content_description="@string/shift_key_content_desc">
            <action type="DOWN" keycode="SHIFT_DOWN" />
            <action type="UP" keycode="SHIFT_UP" />
            <action type="PRESS" keycode="UNLOCK_SHIFT" />
            <action type="LONG_PRESS" keycode="UNLOCK_SHIFT" action_on_down="true" />
            <icon location="@id/icon" value="@attr/IconShiftOn" />
            <icon location="@id/icon_bottom" value="@attr/IconBarGreen" />
        </softkey>
    </softkeys>
</framework>