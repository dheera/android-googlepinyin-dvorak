<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/bg_tutorial_activation_button_checked" />
            <item android:left="10.0dip">
                <bitmap android:gravity="left|center" android:src="@drawable/ic_tutorial_finished_check" />
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/bg_tutorial_activation_button_checked" />
            <item android:right="10.0dip">
                <bitmap android:gravity="right|center" android:src="@drawable/ic_tutorial_button_arrow" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/bg_tutorial_activation_button_normal" />
            <item android:right="10.0dip">
                <bitmap android:gravity="right|center" android:src="@drawable/ic_tutorial_button_arrow" />
            </item>
        </layer-list>
    </item>
</selector>