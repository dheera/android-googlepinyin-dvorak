<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="@dimen/candidate_separator_inset" android:bottom="@dimen/candidate_separator_inset">
                <bitmap android:gravity="fill_vertical|right|center" android:src="@drawable/ic_header_separator_dark_theme" />
            </item>
            <item android:drawable="@drawable/bg_key_pressed_dark_theme" android:right="@dimen/softkey_candidate_highlight_bg_inset_right" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:top="@dimen/candidate_separator_inset" android:bottom="@dimen/candidate_separator_inset">
                <bitmap android:gravity="right" android:src="@drawable/ic_header_separator_dark_theme" />
            </item>
        </layer-list>
    </item>
</selector>